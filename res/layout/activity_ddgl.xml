<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    
    android:background="#f5f5f5"
    android:orientation="vertical" >
	<TextView
            android:id="@+id/textview1"
            android:layout_width="match_parent"
            android:layout_height="78px"
            android:gravity="center"
            android:text="我的订单"
              />
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="78px"
        android:layout_gravity="center"
        android:background="#f5f5f5" >

        <TextView
            android:id="@+id/text1"
            android:layout_width="247px"
            android:layout_height="78px"
            android:gravity="center"
            android:background="@drawable/qbdd_wxz"
              />
        
         <TextView

            android:layout_width="30.6px"
            android:layout_height="78px" />
        

        <TextView
            android:id="@+id/text2"
            android:layout_width="247px"
            android:layout_height="78px"
            android:gravity="center"
            android:background="@drawable/dfkdd_wxz"/>
        <TextView

            android:layout_width="30.6px"
            android:layout_height="78px" />
        <TextView
            android:id="@+id/text3"
            android:layout_width="247px"
            android:layout_height="78px"
            android:gravity="center"
            android:background="@drawable/dwcdd_wxz" />
        
        <TextView

            android:layout_width="30.6px"
            android:layout_height="78px" />

        <TextView
            android:id="@+id/text4"
            android:layout_width="247px"
            android:layout_height="78px"
            android:gravity="center"
            android:background="@drawable/dpjdd_wxz"  />
    </LinearLayout>

    <ImageView
        android:id="@+id/cursor"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:scaleType="matrix"
        android:src="@drawable/a" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        
        
        android:layout_gravity="center"
        android:layout_weight="1.0"
        android:background="#f5f5f5"
        android:flipInterval="30"
        android:persistentDrawingCache="animation" />

</LinearLayout>