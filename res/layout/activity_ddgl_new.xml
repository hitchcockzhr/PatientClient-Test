<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
             <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:background="#F69610" >
             <Button 
		        android:id="@+id/back_btn"
		        android:layout_width="40dp"
		        android:layout_height="35dp"
		        android:layout_gravity="center"
		        android:background="@drawable/home"
		        android:text=""
	        
	        />
            <TextView
		        android:id="@+id/textView1"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:text="我的订单          " 
		        android:layout_gravity="center_horizontal|center_vertical"
		        android:gravity="center_horizontal|center_vertical"
		        android:textColor="#FFFFFF"
		        android:textSize="20sp"/>
            </LinearLayout>
            <TextView
		        android:id="@+id/textView2"
		         android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:text="流程示意图" 
		        android:gravity="center_horizontal|center_vertical"/>
            <ImageView 
                android:id="@+id/status_iv"
                android:layout_width="match_parent"
		        android:layout_height="140dp"
		        android:background="@drawable/status_7"
                />
           
		<TextView
	        android:background="#B1B0A7"
	        android:layout_width="match_parent"
	        android:layout_height="1dp"
	         />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/quanbu_imageView"
            android:layout_width="43dp"
            android:layout_height="42dp"
            android:src="@drawable/qbdd" />

        <TextView
            android:id="@+id/quanbu_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:text="全部订单"
            android:gravity="center_horizontal|center_vertical" />


    </LinearLayout>
    <TextView
	        android:background="#B1B0A7"
	        android:layout_width="match_parent"
	        android:layout_height="1dp"
	         />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/daifukuan_imageView"
            android:layout_width="43dp"
            android:layout_height="42dp"
            android:src="@drawable/fghf" />

        <TextView
            android:id="@+id/daifukuan_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:text="待付挂号费"
            android:gravity="center_horizontal|center_vertical" />

    </LinearLayout>
    <TextView
	        android:background="#B1B0A7"
	        android:layout_width="match_parent"
	        android:layout_height="1dp"
	         />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/daikaishi_imageView"
            android:layout_width="43dp"
            android:layout_height="42dp"
            android:src="@drawable/dzx" />

        <TextView
            android:id="@+id/daikaishi_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="等待开始"
            android:clickable = "true"
            android:gravity="center_horizontal|center_vertical"/>

    </LinearLayout>
    <TextView
	        android:background="#B1B0A7"
	        android:layout_width="match_parent"
	        android:layout_height="1dp"
	         />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/jinxing_imageView"
            android:layout_width="43dp"
            android:layout_height="42dp"
            android:src="@drawable/zxz" />

        <TextView
            android:id="@+id/jinxing_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="正在进行咨询订单"
            android:clickable = "true"
            android:gravity="center_horizontal|center_vertical"/>

    </LinearLayout>
    <TextView
	        android:background="#B1B0A7"
	        android:layout_width="match_parent"
	        android:layout_height="1dp"
	         />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/daijiuyi_imageView"
            android:layout_width="43dp"
            android:layout_height="42dp"
            android:src="@drawable/djy" />

        <TextView
            android:id="@+id/daijiuyi_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:text="待面诊就医"
            android:gravity="center_horizontal|center_vertical" />

    </LinearLayout>
    <TextView
	        android:background="#B1B0A7"
	        android:layout_width="match_parent"
	        android:layout_height="1dp"
	         />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/daifuyaofei_imageView"
           android:layout_width="43dp"
            android:layout_height="42dp"
            android:src="@drawable/fyf" />

        <TextView
            android:id="@+id/daifuyaofei_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="待付药费"
            android:clickable = "true"
            android:gravity="center_horizontal|center_vertical"/>

    </LinearLayout>
    <TextView
	        android:background="#B1B0A7"
	        android:layout_width="match_parent"
	        android:layout_height="1dp"
	         />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/daiquyao_imageView"
           	android:layout_width="43dp"
            android:layout_height="42dp"
            android:src="@drawable/dqy" />

        <TextView
            android:id="@+id/daiquyao_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="待取药"
            android:clickable = "true"
            android:gravity="center_horizontal|center_vertical"/>

    </LinearLayout>
    <TextView
	        android:background="#B1B0A7"
	        android:layout_width="match_parent"
	        android:layout_height="1dp"
	         />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/daipingjia_imageView"
            android:layout_width="43dp"
            android:layout_height="42dp"
            android:src="@drawable/dpj" />

        <TextView
            android:id="@+id/daipingjia_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="待评价"
            android:clickable = "true"
            android:gravity="center_horizontal|center_vertical"/>
        

    </LinearLayout>
    <TextView
	        android:background="#B1B0A7"
	        android:layout_width="match_parent"
	        android:layout_height="1dp"
	         />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/yipingjia_imageView"
            android:layout_width="43dp"
            android:layout_height="42dp"
            android:src="@drawable/ypj" />

        <TextView
            android:id="@+id/yipingjia_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="已评价"
            android:clickable = "true"
            android:gravity="center_horizontal|center_vertical"/>
        

    </LinearLayout>
    <TextView
	        android:background="#B1B0A7"
	        android:layout_width="match_parent"
	        android:layout_height="1dp"
	         />
        </LinearLayout>
    </ScrollView>

    

</LinearLayout>
