    <TextView
        android:id="@+id/ysjj_tv"
        android:text="   医生简介" 
        android:layout_width="fill_parent"
        android:layout_height="80px"
        android:gravity="center_vertical"
        android:textSize="35px" 
        android:textColor="#f69610" />
