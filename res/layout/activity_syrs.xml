<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/srys_jg_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>
    
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="3px"
        android:background="#f5f5f5" />
    

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 优惠信息" 
        android:layout_marginTop="10px"
        android:textColor="#f69610"/>
    
    

    <ListView
        android:id="@+id/srys_fw_listview"
        android:layout_width="match_parent"
        android:layout_marginTop="10px"
        android:layout_height="wrap_content" >
    </ListView>
    
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="3px"
        android:layout_marginTop="10px"
        android:background="#f5f5f5" />
    

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10px"
        android:text=" 请选择支付方式"
         android:textColor="#f69610"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15px"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/yezf_tv"
            android:layout_width="294px"
            android:layout_height="162px"
            android:background="@drawable/yuerzhifu" />
		<TextView
            android:id="@+id/textview3"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:text="     " />
        <TextView
            android:id="@+id/wxzf_tv"
            android:layout_width="294px"
            android:layout_height="162px"
            android:background="@drawable/weixinzhifu" />

    </LinearLayout>

    <Button
        android:id="@+id/syrs_zf_btn"
        android:layout_width="461px"
        android:layout_height="124px"
        android:layout_gravity="center"
        android:layout_marginTop="35px" 
        android:background="@drawable/srys_zhifu" />

</LinearLayout>