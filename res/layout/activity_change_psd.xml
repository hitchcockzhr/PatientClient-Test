<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/acp_title_height"
        android:gravity="center_vertical|center_horizontal"
        android:background="#F69610"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:text="修改密码" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:layout_marginLeft="@dimen/acp_marginLeft"
        android:layout_marginTop="@dimen/acp_marginTop_2"
        
        android:text="原密码" />

    <EditText
        android:id="@+id/old_psd_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/acp_marginLeft"
        android:layout_marginTop="@dimen/acp_marginTop_1"
        android:ems="10"
        android:inputType="textPassword" />

    

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/acp_marginLeft"
        android:layout_marginTop="20dp"
        android:text="新密码" />
    <EditText
        android:id="@+id/new_psd_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       	android:layout_marginLeft="@dimen/acp_marginLeft"
        android:layout_marginTop="@dimen/acp_marginTop_1"
        android:ems="10"
        android:inputType="textPassword" />
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/acp_marginLeft"
        android:layout_marginTop="@dimen/acp_marginTop_2"
       
        android:text="再次输入" />

    <EditText
        android:id="@+id/new_psd_again_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/acp_marginLeft"
        android:layout_marginTop="@dimen/acp_marginTop_1"
       
        android:ems="10"
        android:inputType="textPassword" />

    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical|center_horizontal"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginTop="@dimen/acp_marginTop_3"
        >
        <Button
        android:id="@+id/ok_btn"
        android:layout_width="@dimen/acp_btn_widith"
        android:layout_height="@dimen/acp_btn_height"
        android:background="#F69610"
        android:textColor="#FFFFFF"
        android:text="确认" />

	<View
	    android:layout_width="@dimen/acp_marginTop_2"
	    android:layout_height="match_parent" />

    <Button
        android:id="@+id/cancel_btn"
        android:layout_width="@dimen/acp_btn_widith"
        android:layout_height="@dimen/acp_btn_height"
        android:background="#F69610"
        android:textColor="#FFFFFF"
        android:text="取消" />
        
    </LinearLayout>

    

</LinearLayout>
