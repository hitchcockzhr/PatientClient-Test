<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:orientation="horizontal" 
        android:background="#f69610">
        <Button 
        android:id="@+id/back_btn"
        android:layout_width="40dp"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:background="@drawable/home"
        android:text=""
        
        />


     <TextView
        android:id="@+id/hospital_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XXX医院  "
        android:textSize="50px"
        android:layout_gravity="center_vertical"
        android:textColor="#ffffff"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/head_imageview"
        android:gravity="center_vertical"/>
   

     
 </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/head_imageview"
            android:layout_width="90dp"
            android:layout_height="112dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="14dp"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/keshi_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/head_imageview"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/head_imageview"
            android:textSize="@dimen/ddxq_item_textsize"
            android:text="XXX科" 
            
            />

        <TextView
            android:id="@+id/zhicheng_tv"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/head_imageview"
            android:layout_alignLeft="@+id/keshi_tv"
            android:text="主任医师" 
            android:textSize="@dimen/ddxq_item_textsize"/>

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/keshi_tv"
            android:layout_alignBottom="@+id/keshi_tv"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@+id/zhicheng_tv"
            android:text="张三" 
            android:textSize="@dimen/ddxq_item_textsize"/>

        <TextView
            android:id="@+id/zhuanchang_tv"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/zhicheng_tv"
            android:layout_alignBottom="@+id/zhicheng_tv"
            android:layout_alignLeft="@+id/name_tv"
            android:singleLine="false"
            android:text="专长：XXXXXXXXX" 
            android:textSize="@dimen/ddxq_item_textsize"/>

    </RelativeLayout>

    <LinearLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_marginTop="40dp" 
	    android:gravity="center_vertical|center_horizontal"
	    android:layout_gravity="center_vertical|center_horizontal">
		<TextView
	        android:id="@+id/blank_tv"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:text="   " />
	    <TextView
	        android:id="@+id/date_tv"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="2"
	        android:text="2014-12-12"
	        android:textSize="@dimen/ddxq_item_textsize" />
		<TextView
	        
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:text="   " />
		<TextView
	        android:id="@+id/week_tv"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="2"
	        android:text="星期二" 
	        android:textSize="@dimen/ddxq_item_textsize"/>
		<TextView
	        
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:text="   " />
	    <TextView
	        android:id="@+id/time_tv"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="2"
	        android:text="09:00-11:00" 
	        android:textSize="@dimen/ddxq_item_textsize"/>
		

	</LinearLayout>

    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical|center_horizontal"
	    android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginTop="20sp" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="病情描述" />

        <EditText
            android:id="@+id/description_et"
            android:layout_width="286dp"
            android:layout_height="200dp" >

            <requestFocus />
        </EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:gravity="center_vertical|center_horizontal"
	    android:layout_gravity="center_vertical|center_horizontal"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/ok_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#F69610"
            android:textColor="#FFFFFF"
            android:text="确认订单"
            android:textSize="20sp"  />
        <View 
            android:layout_width="4dp"
            android:layout_height="wrap_content"
            />

        <Button
            android:id="@+id/fukuan_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#F69610"
            android:textColor="#FFFFFF"
            android:text="立即付款"
            android:textSize="20sp" />
        <View 
            android:layout_width="4dp"
            android:layout_height="wrap_content"
            />

        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#F69610"
            android:textColor="#FFFFFF"
            android:text="取消订单"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>