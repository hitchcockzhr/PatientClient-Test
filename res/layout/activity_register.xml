<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/register_layout"  >
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="欢迎注册"
        android:layout_gravity="center_vertical|center_horizontal"
        android:gravity="center_vertical|center_horizontal"
        android:background="#F69610"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        />
	<LinearLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    >
	    <TextView
        android:id="@+id/name_tv"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="用户名：" />

    <EditText
        android:id="@+id/name_et"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
       />
	</LinearLayout>
    <LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    >
       <TextView
        android:id="@+id/psd_tv"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="    密码：" />   
	    <EditText
	        android:id="@+id/psd_et"
	        android:layout_width="150dp"
	        android:layout_height="30dp"
        	android:layout_marginLeft="10dp"
        	android:layout_marginTop="10dp"
	         /> 
    </LinearLayout>
 	<LinearLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    >
     <TextView
        android:id="@+id/psd_again_tv"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="10dp"
        android:text="重输密码：" />
     <EditText
        android:id="@+id/psd_again_et"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
      	/>
	</LinearLayout>
	<LinearLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal">
    <TextView
        android:id="@+id/xingming_tv"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:text="    姓名：" />

    <EditText
        android:id="@+id/xingming_et"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        />
	</LinearLayout>
	<LinearLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal">
    <TextView
        android:id="@+id/set_tv"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:text="    性别：" />

    <Spinner
        android:id="@+id/sex_spinner"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
         />
	</LinearLayout>
	<LinearLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal">
    <TextView
        android:id="@+id/birth_tv"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:text="    生日：" />

    <Spinner
        android:id="@+id/year_spinner"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
         />

    <Spinner
        android:id="@+id/month_spinner"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
         />

    <Spinner
        android:id="@+id/day_spinner"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />
	</LinearLayout>
	<LinearLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal">
	    <TextView
	        android:id="@+id/id_tv"
	        android:layout_width="wrap_content"
	        android:layout_height="30dp"
	        android:layout_marginTop="10dp"
        	android:layout_marginLeft="20dp"
	        android:text="身份证：" />
	
	    <EditText
	        android:id="@+id/id_et"
	        android:layout_width="wrap_content"
	        android:layout_height="30dp"
	        android:layout_marginTop="10dp"
        	android:layout_marginLeft="10dp"
	        android:ems="18"
	      />
	</LinearLayout>
	<LinearLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal">
	    <TextView
	        android:id="@+id/mail_tv"
	        android:layout_width="wrap_content"
	        android:layout_height="30dp"
	        android:layout_marginTop="10dp"
        	android:layout_marginLeft="20dp"
	        android:text="    电邮：" />
	
	    <EditText
	        android:id="@+id/mail_et"
	        android:layout_width="wrap_content"
	        android:layout_height="30dp"
	        android:layout_marginTop="10dp"
        	android:layout_marginLeft="10dp"
	        android:ems="10" />
	</LinearLayout>
	<LinearLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal">
	     <TextView
	        android:id="@+id/phone_tv"
	        android:layout_width="wrap_content"
	        android:layout_height="30dp"
	        android:layout_marginTop="10dp"
        	android:layout_marginLeft="20dp"
	        android:text="手机号：" />
	    <EditText
	        android:id="@+id/phone_et"
	        android:layout_width="wrap_content"
	        android:layout_height="30dp"
	        android:layout_marginTop="10dp"
        	android:layout_marginLeft="10dp"
	        android:inputType="number"
	        android:ems="10" />
	
	   
	</LinearLayout>
	<LinearLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal">
	    <TextView
	        android:id="@+id/address_tv"
	        android:layout_width="wrap_content"
	        android:layout_height="30dp"
	        android:layout_marginTop="10dp"
        	android:layout_marginLeft="20dp"
	        android:text="    地址：" />
	
	    <EditText
	        android:id="@+id/address_et"
	        android:layout_width="wrap_content"
	        android:layout_height="30dp"
	        android:layout_marginTop="10dp"
        	android:layout_marginLeft="10dp"
	       	
	        android:ems="10" />
	</LinearLayout>
    <Button
        
        android:id="@+id/ok_btn"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_marginTop="53dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:background="#F69610"
        android:textColor="#FFFFFF"
        android:text="注册" />

</LinearLayout>
