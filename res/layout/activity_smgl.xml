<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
             <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#F69610" >
             <Button 
		        android:id="@+id/back_btn"
		        android:layout_width="40dp"
		        android:layout_height="35dp"
		        android:layout_gravity="center"
		        android:background="@drawable/home"
		        android:text=""
	        
	        />
            <TextView
		        android:id="@+id/textView1"
		        android:layout_width="match_parent"
		        android:layout_height="40dp"
		        android:textColor="#FFFFFF"
		        android:background="#F69610"
		        android:textSize="20sp"
		        android:layout_gravity="center_vertical|center_horizontal"
		        android:gravity="center_vertical|center_horizontal"
		        android:text="待扫码订单" />
            </LinearLayout>
            <TextView
		        android:id="@+id/textView2"
		         android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:text="流程示意图" 
		        android:gravity="center_horizontal|center_vertical"/>
            <ImageView 
                android:id="@+id/status_iv"
                android:layout_width="match_parent"
		        android:layout_height="140dp"
		        android:background="@drawable/status_7"
                />
           
		<TextView
	        android:background="#B1B0A7"
	        android:layout_width="match_parent"
	        android:layout_height="1dp"
	         />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/daijiuyi_imageView"
            android:layout_width="43dp"
            android:layout_height="42dp"
            android:src="@drawable/djy" />

        <TextView
            android:id="@+id/daijiuyi_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:text="待面诊就医"
            android:gravity="center_horizontal|center_vertical" />

    </LinearLayout>
    <TextView
	        android:background="#B1B0A7"
	        android:layout_width="match_parent"
	        android:layout_height="1dp"
	         />
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/daiquyao_imageView"
           	android:layout_width="43dp"
            android:layout_height="42dp"
            android:src="@drawable/dqy" />

        <TextView
            android:id="@+id/daiquyao_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="待取药"
            android:clickable = "true"
            android:gravity="center_horizontal|center_vertical"/>

    </LinearLayout>
    <TextView
	        android:background="#B1B0A7"
	        android:layout_width="match_parent"
	        android:layout_height="1dp"
	         />
    </LinearLayout>
    </ScrollView>

    

</LinearLayout>
